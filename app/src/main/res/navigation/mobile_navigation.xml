<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.vino.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_blankFragment"
            app:destination="@id/blankFragment" />
    </fragment>
    <!-- TODO play with animation -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.vino.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_todos"
        android:name="com.example.vino.ui.todos.TodosFragment"
        android:label="@string/title_todos"
        tools:layout="@layout/fragment_todos" />
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.vino.ui.home.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" >
        <argument
            android:name="vineyardName"
            app:argType="string" />
        <argument
            android:name="vineyardImage"
            app:argType="coil.memory.MemoryCache$Key"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_blankFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

</navigation>