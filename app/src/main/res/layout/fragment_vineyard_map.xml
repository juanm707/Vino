<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sergivonavi.materialbanner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:messageTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:buttonLeftText="Dismiss"
        app:buttonRightText="View"
        app:icon="@drawable/ic_baseline_grass_24"
        app:iconTint="@color/purple_600"
        app:messageText="Would you like to view the block info?" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.home.VineyardMapFragment" />

        <TextView
            android:id="@+id/vineyard_name_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/map_title_background"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:text="Vineyard Name"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:elevation="5dp"/>

    </FrameLayout>

</LinearLayout>