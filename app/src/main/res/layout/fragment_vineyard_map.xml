<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sergivonavi.materialbanner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:buttonLeftText="Dismiss"
        app:buttonRightText="View"
        app:icon="@drawable/ic_baseline_grass_24"
        app:iconTint="@color/purple_600"
        app:messageText="Would you like to view the block info?"
        app:messageTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.home.VineyardMapFragment" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center|end"
            android:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:tint="@color/greyText"
            app:srcCompat="@drawable/ic_round_layers_24"
            app:fabSize="mini"/>

        <TextView
            android:id="@+id/vineyard_name_map_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/map_title_background"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:text="Vineyard Name"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:elevation="5dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/temperature_scale"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="start">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/temperature_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Temperature, Â°F"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/imageCardView"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/temperature_label">

                    <ImageView
                        android:id="@+id/temperature_scale_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/greyBackground" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:text="-40"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/imageCardView"
                    app:layout_constraintStart_toEndOf="@+id/temperature_label"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="8dp"
                    android:text="0"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/imageCardView"
                    app:layout_constraintEnd_toStartOf="@+id/temp3"
                    app:layout_constraintStart_toEndOf="@+id/temp1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/temp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="30"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/imageCardView"
                    app:layout_constraintEnd_toEndOf="@+id/imageCardView"
                    app:layout_constraintStart_toStartOf="@+id/imageCardView"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/temp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:text="70"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/imageCardView"
                    app:layout_constraintEnd_toStartOf="@+id/temp5"
                    app:layout_constraintStart_toEndOf="@+id/temp3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/temp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="16dp"
                    android:text="100"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/imageCardView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>
</LinearLayout>