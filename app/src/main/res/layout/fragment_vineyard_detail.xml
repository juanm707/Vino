<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vineyard_item_card_view_end"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="0dp"
    tools:context=".ui.home.VineyardDetailFragment">

    <LinearLayout
        android:id="@+id/vineyard_item_linear_layout_end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vineyard_image_end"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vineyard_name_end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/app_name" />

                <TextView
                    android:id="@+id/vineyard_temp_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="3dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold"
                    android:text="--"
                    app:layout_constraintEnd_toStartOf="@+id/temperature_image_end"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="84°F" />

                <TextView
                    android:id="@+id/current_job_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Job: 039 Pruning"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vineyard_name_end"
                    tools:text="Job: 039 Pruning" />

                <ImageView
                    android:id="@+id/temperature_image_end"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_baseline_thermostat_24"
                    app:layout_constraintBottom_toTopOf="@+id/humidity_image_end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#E53935" />

                <TextView
                    android:id="@+id/vineyard_humidity_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold"
                    android:text="--"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/humidity_image_end"
                    app:layout_constraintTop_toBottomOf="@+id/vineyard_temp_end"
                    tools:text="30%" />

                <ImageView
                    android:id="@+id/humidity_image_end"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_humidity"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vineyard_temp_end"
                    app:tint="#1E88E5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/vineyard_detail_gradient_background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/map_button"
                    android:layout_width="0dp"
                    android:layout_height="115dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mapsample" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/vineyard_card_background"
                        android:gravity="center|top"
                        android:paddingTop="8dp"
                        android:text="Map"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="#3C0150"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/lwp_button"
                    android:layout_width="0dp"
                    android:layout_height="115dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:adjustViewBounds="true"
                        android:rotation="185"
                        android:scaleType="centerCrop"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:src="@drawable/animated_chart"
                        android:translationY="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/vineyard_card_background"
                        android:gravity="center|top"
                        android:paddingTop="8dp"
                        android:text="Leaf Stress"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="#3C0150"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/weather_button"
                    android:animateLayoutChanges="true"
                    android:layout_width="wrap_content"
                    android:layout_height="115dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/map_button">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Weather"
                            android:paddingTop="4dp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textColor="@color/light_blue_900"
                            android:textStyle="bold" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:animateLayoutChanges="true">

                            <LinearLayout
                                android:id="@+id/day1"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="3dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/day1date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="-/-" />

                                <ImageView
                                    android:id="@+id/day1icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="3dp"
                                    android:src="@drawable/ic_baseline_wb_sunny_24" />

                                <TextView
                                    android:id="@+id/day1temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="4dp"
                                    android:text="--°"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_margin="4dp"
                                android:layout_marginStart="32dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="3dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/day1"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/day2date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="-/-" />

                                <ImageView
                                    android:id="@+id/day2icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="3dp"
                                    android:src="@drawable/ic_baseline_wb_sunny_24" />

                                <TextView
                                    android:id="@+id/day2temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="4dp"
                                    android:text="--°"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day3"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="3dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/day2"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/day3date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-/-"
                                    android:layout_gravity="center_horizontal" />

                                <ImageView
                                    android:id="@+id/day3icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_baseline_wb_sunny_24"
                                    android:layout_marginTop="3dp"/>

                                <TextView
                                    android:id="@+id/day3temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="--°"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day4"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="3dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/day3"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/day4date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-/-"
                                    android:layout_gravity="center_horizontal" />

                                <ImageView
                                    android:id="@+id/day4icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_baseline_wb_sunny_24"
                                    android:layout_marginTop="3dp"/>

                                <TextView
                                    android:id="@+id/day4temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="--°"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day5"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="3dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/day4"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/day5date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-/-"
                                    android:layout_gravity="center_horizontal" />

                                <ImageView
                                    android:id="@+id/day5icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_baseline_wb_sunny_24"
                                    android:layout_marginTop="3dp"/>

                                <TextView
                                    android:id="@+id/day5temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="--°"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day6"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="3dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/day5"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/day6date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-/-"
                                    android:layout_gravity="center_horizontal" />

                                <ImageView
                                    android:id="@+id/day6icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_baseline_wb_sunny_24"
                                    android:layout_marginTop="3dp"/>

                                <TextView
                                    android:id="@+id/day6temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="--°"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day7"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="3dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/day6"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/day7date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="-/-" />

                                <ImageView
                                    android:id="@+id/day7icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="3dp"
                                    android:src="@drawable/ic_baseline_wb_sunny_24" />

                                <TextView
                                    android:id="@+id/day7temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="4dp"
                                    android:text="--°"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sprayCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weather_button">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/sprayInfoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="Spray Info"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/sprayOrderButton"
                            app:layout_constraintStart_toStartOf="@id/sprayInfoText"
                            app:layout_constraintTop_toBottomOf="@id/sprayInfoText">

                            <TextView
                                android:id="@+id/sprayText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="Fungicide - Rhyme" />

                            <TextView
                                android:id="@+id/reiText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="REI: 24 hrs" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sprayOrderButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:backgroundTint="@color/design_default_color_error"
                            android:text="View Order"
                            app:icon="@drawable/ic_round_description_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
