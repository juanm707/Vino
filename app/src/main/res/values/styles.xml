<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Vino.Toolbar" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.Vino.Toolbar</item>
    </style>

    <style name="TextAppearance.Vino.Toolbar" parent="">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="Widget.Vino.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/asset</item>
    </style>

    <style name="VineyardRipple">
        <item name="colorControlHighlight">#00AA2929</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.Theme.Vino.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>
